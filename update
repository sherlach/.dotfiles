#!/bin/sh

# remapping was a one-off static thing, no need to update

CONFIG_FOLDER=~/customisations

# update sh stuff
cp -v ~/.profile $CONFIG_FOLDER/sh

# update bash stuff
#cp -v ~/.bash_profile ~/.bashrc ~/customisations/bash

# update fish stuff
cp -v ~/.config/fish/* ~/customisations/fish

# update tmux stuff
