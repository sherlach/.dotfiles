# update vis stuff
cp -v ~/.config/vis/* $CONFIG_FOLDER/vis

# update vim stuff
cp -v ~/.vimrc ~/customisations/vim

# update nvim stuff
#cp -v ~/.config/nvim/* ~/customisations/nvim

# update alacritty stuff
#cp -v ~/.config/alacritty/alacritty.yml ~/customisations/alacritty

# update w3m stuff
